{% extends "admin/base.html.twig" %}

{% block main %}

	<h2>{{ category.name }}</h2>
	<img src="{{ asset('images/' ~ category.media) }}" alt="{{ category.name }}">
	{% for product in category.products %}

		<h2>{{ product.name }}</h2>
		<img src="{{ asset('images/' ~ product.images[0].src ) }}" alt="{{ product.images[0].alt }}">

	{% endfor %}

{% endblock %}
